<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div>
        <div style="margin: 10px; margin-top: -57px;">
            <nav class="navbar  navbar-form navbar-inverse ">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <a class="navbar-brand" href="#">SchoolApplication</a>
                    </div>
                    <ul class="nav navbar-nav">
                        <li class="active"><a href="@Url.Action("Index","Home")">Home</a></li>
                        <li class="active"><a href="#">About Us</a></li>
                        <li class="active"><a href="#">Contact Us</a></li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        @*<li class="active"><a href="#">Welcome @Session["Name"]</a></li>*@
                        @if (Session["AdminId"] != null)
                        {
                            <li class="active"> <a href="@Url.Action("AdminDashboard","Home")"><span></span>Admin Dashboard</a></li>
                            <li class="active"> <a href="@Url.Action("Logout","Home")"><span class="glyphicon glyphicon-log-in"></span> Logout</a></li>
                        }
                        else
                        {
                            <li class="active"> <a href="@Url.Action("AdminLogin","Home")"><span class="glyphicon glyphicon-log-in"></span> Admin Login</a></li>
                        }

                    </ul>
                </div>
            </nav>
        </div>

    </div>
    <div class="container body-content">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
