@model ApplicationModel.Admission
@{
    ViewBag.Title = "StudentInformation";
    <link href="~/Content/SchoolStyleSheet.css" rel="stylesheet" />
}
<style>
    .divStyle {
        border-style: groove;
        border-color: burlywood;
        border-width: 5px;
        margin-left: 350px;
        width: 460px;
        padding-bottom: 20px;
        padding: 10px 60px;
    }
</style>

@using (Html.BeginForm("StudentInformation", "Home"))
{
    <div class="form-group">
        <h4>You have Successfully registered for the Academic Year @DateTime.Now.ToString("MM/dd/yyyy")</h4>
    </div>
    <div class="divStyle">
        <div class="form-group">
            @Html.LabelFor(m => m.AdmissionId)
            @Html.TextBoxFor(m => m.AdmissionId, new { @class = "form-control", @readonly = true })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Grade)
            @Html.TextBoxFor(m => m.Grade, new { @class = "form-control", @readonly = true })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.FirstName)
            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", @readonly = true })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.FatherName)
            @Html.TextBoxFor(m => m.FatherName, new { @class = "form-control", @readonly = true })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.CourseName)
            @Html.TextBoxFor(m => m.CourseName, new { @class = "form-control", @readonly = true })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.SubCourseName)
            @Html.TextBoxFor(m => m.SubCourseName, new { @class = "form-control", @readonly = true })
        </div>
    </div>
}
